# http://editorconfig.org

root = true

[*] # 所有文件适用
charset = utf-8 # 设置文件字符集为utf-8
indent_style = space # 缩进风格 space/tab
indent_size = 2 # 缩进大小
end_of_line = lf # 控制换行类型
trim_trailing_whitespace = true # 去除首行的任意空白字符
insert_final_newline = true # 适中在文件末尾插入一个新行

[*.md] # 表示进 md 文件适用一下规则
max_line_length = off
trim_trailing_whitespace = false